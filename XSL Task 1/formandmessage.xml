<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" hid="formandmessage.xsl"?>
<payment paymentname="MTS" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="formandmessage.xsd">
	<forms>
		<!-- Задание 3-->
		<form class="paymentform" id="step_1">
			<input id="formComment" typeelement="string" required="true">
				<label>Название</label>
				<value>Коммунальные услуги в Санкт-Петербурге (ВЦКП)</value>
			</input>
			<input id="tempAccount" typeelement="string" error="Какое то там сообщение" length="9" regexp="([1-9]){9}" required="true">
				<label>Лицевой счет</label>
				<hint>9 цифр</hint>
			</input>
			<!-- предположительно все элементы в группе будут выводиться в одну строку-->
			<group class="xf_group inrow all">
				<label>Период</label>
				<select id="month" typeelement="string" required="true" error="Укажите месяц">
					<hint>месяц</hint>
					<item>
						<label>Январь</label>
						<value>01</value>
					</item>
					<item>
						<label>Февраль</label>
						<value>02</value>
					</item>
					<item>
						<label>Март</label>
						<value>03</value>
					</item>
					<item>
						<label>Апрель</label>
						<value>04</value>
					</item>
					<item>
						<label>Май</label>
						<value>05</value>
					</item>
					<item>
						<label>Июнь</label>
						<value>06</value>
					</item>
					<item>
						<label>Июль</label>
						<value>07</value>
					</item>
					<item>
						<label>Август</label>
						<value>08</value>
					</item>
					<item>
						<label>Сентябрь</label>
						<value>09</value>
					</item>
					<item>
						<label>Октябрь</label>
						<value>10</value>
					</item>
					<item>
						<label>Ноябрь</label>
						<value>11</value>
					</item>
					<item>
						<label>Декабрь</label>
						<value>12</value>
					</item>
				</select>
				<input id="year" required="true" error="Год должен быть заполнен. 4 цифры" length="4" regexp="([1-9]){4}" typeelement="string">
					<hint>год</hint>
				</input>
			</group>
			<input id="peni" typeelement="float" min="0" max="200" required="false" error="Сумма пени указанна не верно">
				<label>Пени</label>
				<value>0.00</value>
			</input>
			<input id="sum" typeelement="float" min="0" max="999999.99" error="Сумма платежа указанна не верно!" required="true">
				<label>Сумма</label>
				<value>0.00</value>
			</input>
			<select id="paymenttype" appearance="compact"  error="Укажите тип платежа" required="true">
				<label>Тип платежа</label>
				<item>
					<label>Срочный</label>
					<value>1</value>
				</item>
				<item>
					<label>Отложенный</label>
					<value>2</value>
				</item>
			</select>
			<select id="attrcheck" typeelement="boolean" required="false">
				<label>Регулярный платеж</label>
				<value>true</value>
			</select>
			<submit submission="submit" id="send">
				<label>Submit</label>
			</submit>
		</form>
		<form class="paymentform" id="step_2"/>
		<form class="paymentform" id="step_3"/>
	</forms>
	<messages>
		<message id="1" messagetype="1" visible="true">
			<form_id>step_1</form_id>
			<title>Information message</title>
			<section>
				<simpletext>Information message text1</simpletext>
				<listtext>list 1</listtext>
				<simpletext>Information message text2</simpletext>
				<listtext>list 2</listtext>
				<simpletext>Information message text3</simpletext>
			</section>
			<section>
				<simpletext>Information message text21</simpletext>
				<listtext>list 12</listtext>
				<listtext>list 222</listtext>
				<simpletext>Information message text22</simpletext>
			</section>
		</message>
		<message id="3" messagetype="3" visible="false">
			<form_id>step_3</form_id>
			<form_id>step_1</form_id>
			<title>Critical message</title>
			<section>
				<simpletext>Critical message text2</simpletext>
				<listtext>list 12</listtext>
				<listtext>list 222</listtext>
				<simpletext>Critical message text2</simpletext>
			</section>
			<section>
				<simpletext>Critical message text2</simpletext>
				<listtext>list 12</listtext>
				<listtext>list 222</listtext>
				<simpletext>Critical message text2</simpletext>
			</section>
		</message>
		<message id="2" messagetype="2" visible="true">
			<form_id>step_1</form_id>
			<form_id>step_2</form_id>
			<title>Warning message</title>
			<section>
				<simpletext>Warning message text2</simpletext>
				<listtext>list 12</listtext>
				<listtext>list 222</listtext>
				<simpletext>Warning message text2</simpletext>
			</section>
			<section>
				<simpletext>Warning message text2</simpletext>
				<listtext>list 12</listtext>
				<listtext>list 222</listtext>
				<simpletext>Warning message text2</simpletext>
			</section>
		</message>
	</messages>
</payment>
